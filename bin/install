#!/bin/bash -eu

source $OPENSHIFT_CARTRIDGE_SDK_BASH

case "$1" in
    -v|--version)
      version="$2"
esac

echo "$version" > "$OPENSHIFT_ADVANCED_PYTHON_DIR/env/OPENSHIFT_ADVANCED_PYTHON_VERSION"

mkdir -p $OPENSHIFT_ADVANCED_PYTHON_DIR/template

# Call the version specific install script
$OPENSHIFT_ADVANCED_PYTHON_DIR/usr/python/versions/$version/bin/install $version

# Install gevent as the default server
source "${OPENSHIFT_ADVANCED_PYTHON_DIR}/usr/python/versions/${OPENSHIFT_ADVANCED_PYTHON_VERSION}/lib/create-virtenv"
activate-virtenv
pip install gevent